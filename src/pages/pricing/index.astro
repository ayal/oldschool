---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";

const _lessons = await getCollection("lesson");
const lessons = _lessons.sort((a, b) => a.data.sort - b.data.sort).filter((lesson) => lesson.data.sort > 0);    // filter marketing
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
        <style>
            .lesson-link {
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .lesson-link p {
                font-size: 14px;
            }

        </style>
    </head>
    <body>
        <Header />
        <main>
            <div class="sections">
                <div class="lessons">
                    <h4>The Lessons</h4>
                    <ul>
                        {
                            lessons.map((lesson) => (
                                <li>
                                    <a href={`/lesson/${lesson.id}/`} class="lesson-link">
                                        <h5>{lesson.data.title}</h5>
                                        <p>
                                            {lesson.data.videos?.length} videos
                                        </p>
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <div class="mentors">
                    <h2>The Mentors</h2>
                    <div class="mentor">
                        <img src="/images/Ran.png" alt="Ran Segal" />
                        <div>
                            <strong>Ran Segal</strong><br />
                            Experienced in UX design, design-thinking, and more.
                        </div>
                    </div>
                    <div class="mentor">
                        <img src="/images/Lior.png" alt="Lior Frenkel" />
                        <div>
                            <strong>Lior Frenkel</strong><br />
                            Expert in freelancing, blogging, and teaching around
                            the world.
                        </div>
                    </div>
                </div>

                <div class="tools">
                    <h2>The Tools</h2>
                    <ul>
                        <li>
                            <a href="/howmuch"
                                >Project Pricing Calculator</a>
                        </li>
                        <li>
                            <a href="/breakeven"
                                >Breakeven Calculator</a>
                        </li>
                        <li><a href="#">Proposal Creator</a></li>
                    </ul>
                </div>

                <div class="docs">
                    <h2>The Docs</h2>
                    <ul>
                        <li>
                            <a
                                target="_blank"
                                href="/docs/stepbystep.pdf"
                                >Step By Step Guide</a>
                        </li>
                        <li>
                            <a
                                target="_blank"
                                href="/docs/FirstTalkQuestionnaire.pdf"
                                >First Talk Questionnaire</a>
                        </li>
                        <li>
                            <a
                                target="_blank"
                                href="/docs/ProposalChecklist.pdf"
                                >The Proposal Checklist</a>
                        </li>
                        <li>
                            <a
                                target="_blank"
                                href="/docs/ProposalTemplate.pdf"
                                >A Sexy Proposal Template</a>
                        </li>
                        <li>
                            <a
                                target="_blank"
                                href="/docs/BankOfAlternatives.pdf"
                                >The Bank Of Alternatives</a>
                        </li>
                    </ul>
                </div>
            </div>
        </main>
        <Footer />
    </body>
</html>
